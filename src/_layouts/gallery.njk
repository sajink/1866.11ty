---
layout: base.njk
---
<div class="bg-[#111827] h-[300px] md:h-[500px] lg:h-[620px]">
{% include "header.html" %} 
<p class="font-fraunces text-white text-center text-4xl md:text-7xl lg:text-9xl pb-12 md:py-12 lg:py-24 mx-10">Gallery</p>
<div class="lg:top-[425px] px-6 md:px-10 pb-16 md:pb-28">
        <div class="grid grid-cols-2 md:grid-cols-3 gap-6">
            {% for img in page.gallery.photos %}
            <img src="{{img.image}}" alt="{{img.alt}}" class="w-full h-[135px] md:h-[180px] lg:h-[393px] object-cover cursor-pointer" onclick="showModal('{{img.image}}')"/>
            {% endfor %}
        </div>
    </div>
    <div id="modal" class="hidden fixed top-0 left-0 z-80 w-screen h-screen bg-black/70 flex justify-center items-center">
        <a class="fixed z-90 left-4 top-1/2 transform -translate-y-1/2 text-white text-5xl font-bold text-decoration-none" href="javascript:void(0)" onclick="previousImage()"><img src="/images/gallery/left-arrow.png"></a>
        <a class="fixed z-90 right-4 top-1/2 transform -translate-y-1/2 text-white text-5xl font-bold text-decoration-none" href="javascript:void(0)" onclick="nextImage()"><img src="/images/gallery/right-arrow.png"></a>
        <a class="fixed z-90 top-2 right-2 text-white text-5xl font-bold text-decoration-none" href="javascript:void(0)" onclick="closeModal()"><img src="/images/gallery/close.png"></a>
        <img id="modal-img" class="max-w-[500px] h-[800px] md:max-w-[800px] md:max-h-[900px] lg:w-[1830px] lg:h-[90vh] object-cover" />
    </div>
<div  class="mx-auto text-center lg:max-w-[1100px] pt-4">
  <div class="flex items-center justify-center">
    <img src="/images/about-us/divider.svg" alt="divider">
  </div>
  <div class="font-fraunces primary-clr text-3xl md:text-6xl text-center py-6 md:py-10 pt-5 medium leading-10 lg:leading-12 w-full max-w-[300px] md:max-w-[900px] lg:max-w-[950px] lg:h-max-[307px] mx-auto text-clip overflow-hidden" style="line-height: 1.5;">
  Discover the charm of Thalassery at <br> The Heritage 1866.<br> Your unforgettable experience awaits!</div>
  <div class="flex items-center justify-center pb-16">
    <img src="/images/about-us/divider.svg" alt="divider">
  </div>
</div>   
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    var currentImageIndex = 0;
    var images = [{% for img in page.gallery.photos %} '{{img.image}}', {% endfor %}];

    function showModal(imageUrl) {
        $('#modal-img').fadeOut(400, function() {
            $(this).attr('src', imageUrl).fadeIn(400);
        });
        $('#modal').removeClass('hidden');
        $('body').css('overflow', 'hidden');
        currentImageIndex = images.indexOf(imageUrl);
    }

    function closeModal() {
        $('#modal').addClass('hidden');
        $('body').css('overflow', 'auto');
    }

    function nextImage() {
        currentImageIndex = (currentImageIndex + 1) % images.length;
        $('#modal-img').animate({ left: '100%', opacity: 0 }, 300, function() {
            $(this).attr('src', images[currentImageIndex]).css({ left: '-100%', opacity: 0 }).animate({ left: '0', opacity: 1 }, 400);
        });
    }

    function previousImage() {
        currentImageIndex = (currentImageIndex - 1 + images.length) % images.length;
        $('#modal-img').animate({ left: '-100%', opacity: 0 }, 300, function() {
            $(this).attr('src', images[currentImageIndex]).css({ left: '100%', opacity: 0 }).animate({ left: '0', opacity: 1 }, 400);
        });
    }
</script>