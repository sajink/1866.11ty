---
layout: default.njk
---

<div class="bg-[#111827]">
    {% include "header.html" %}
    <p class="font-fraunces text-white text-center text-5xl md:text-9xl pb-12 md:py-12 lg:py-24">Contact</p>
</div>

<div class="mx-6 md:mx-[10%] lg:mx-[27%] font-fraunces font-semibold tracking-normal lg:tracking-widest text-center text-xl md:text-3xl">
    <div class="flex items-center justify-center pt-12 md:pt-20">
        <img src="/images/contact/location.png" alt="location">
    </div>
    <p class="text-sm md:text-base font-bold tracking-widest md:pt-3">LOCATION</p>
    <div>{{ site.name }}, {{ site.address }},</div>
    <div>{{ site.place }}{{ site.pin}}, {{ site.country}}.</div>
    <p class="md:pt-3">{{ site.phone }}</p>
    <p class="md:pt-3">{{ site.email }}</p>
    <div class="flex items-center justify-center py-10">
        <img src="/images/about-us/divider.svg" alt="divider">
    </div>
</div>

<div class="flex items-center justify-center px-6 md:p-12">
    <div class="mx-auto w-full max-w-[600px]">
        <form>
            <div class="mb-5 flex flex-col ">
                <label for="first_name" class="  font-bold block text-sm mb-2">Name <span class="text-red-500">*</span></label>
                <div class="flex gap-4">
                    <div class="w-1/2 rounded-md shadow">
                        <input type="text" name="first_name" id="first_name" placeholder="First Name" class="w-full rounded-md border border-[#e0e0e0] bg-white py-2 px-6 text-base font-medium text-[#6B7280] outline-none focus-dotted-border " required />
                    </div>
                    <div class="w-1/2 rounded-md shadow">
                        <input type="text" name="last_name" id="last_name" placeholder="Last Name" class="w-full rounded-md border border-[#e0e0e0] bg-white py-2 px-6 text-base font-medium text-[#6B7280] outline-none focus-dotted-border " required />
                    </div>
                </div>
            </div>
            <div class="mb-5">
                <label for="email" class="block   font-bold text-sm">Email <span class="text-red-500">*</span></label>
                <div class="rounded-md shadow">
                    <input type="email" name="email" id="email" placeholder="example@domain.com" class="w-full rounded-md border border-[#e0e0e0] bg-white py-2 px-6 text-base font-medium text-[#6B7280] outline-none focus-dotted-border " required />
                </div>
            </div>
            <div class="mb-5">
                <label for="subject" class="block   font-bold text-sm">Phone <span class="text-red-500">*</span></label>
                <div class="rounded-md shadow">
                    <input type="text" name="subject" id="subject" placeholder="Phone number" class="w-full rounded-md border border-[#e0e0e0] bg-white py-2 px-6 text-base font-medium text-[#6B7280] outline-none focus-dotted-border " required />
                </div>
            </div>
            <div class="mb-3">
                <label for="message" class="block   font-bold text-sm">Comment or Message <span class="text-red-500">*</span></label>
                <div class="rounded-md">
                    <textarea rows="4" name="message" id="message" placeholder="Type your message" class="w-full resize-none rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus-dotted-border" style="box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);" required></textarea>
                </div>
            </div>
            <div class="pb-20">
                <button class="text-sm lg:inline-block py-2 px-6 primary-clr border hover:bg-yellow-600 hover:text-white border-yellow-600 transition duration-200">
                    <a class="hover:no-underline" href="">SEND MESSAGE</a>
                </button>
            </div>
        </form>
    </div>
</div>


